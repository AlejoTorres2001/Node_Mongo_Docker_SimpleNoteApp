<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST" >
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text " class="form-control" placeholder="title" name="title" value="{{note.title}}">
                </div>
                 <div class="form-group">
                   <textarea name="description" id="decription" style="width: 100%;" class="mt-4"placeholder="description">{{note.description}}</textarea>
                </div>
                 <div class="form-group">
                   <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>