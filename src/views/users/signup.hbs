<div class="row">

  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="mt-3">

            <input
              type="text"
              class="form-control"
              name="name"
              id=""
              placeholder="name"
              value="{{name}}"
            />
          </div>
          <div class="mt-3">

            <input
              type="email"
              class="form-control"
              name="email"
              id=""
              placeholder="email"
              value="{{email}}"
            />
          </div>
          <div class="mt-3">

            <input
              type="password"
              class="form-control"
              name="password"
              id=""
              placeholder="***"
              value="{{password}}"
            />
          </div>
          <div class="mt-3">

            <input
              type="password"
              class="form-control"
              name="confirm_password"
              id=""
              placeholder="***"
              value="{{confirm_password}}"
            />
          </div>
          <div class="mt-3">
            <button
              type="submit"
              class="btn btn-primary w-100"
            >Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>